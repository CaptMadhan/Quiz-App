<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle">
            <padding android:left="30dp"/>
            <corners android:radius="10dp"/>
            <gradient
                android:angle="270"
                android:startColor="#CDDACB"
                android:endColor="#83A17E"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="rectangle" >
            <corners android:radius="10dp"/>
            <solid android:color="#7DDB81" />
        </shape>
    </item>

</layer-list>